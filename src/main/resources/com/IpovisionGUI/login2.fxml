<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.iKitchen.view.LoginGrafico"
            stylesheets="@/login2.css">

    <!-- VBox per il form del login -->
    <VBox fx:id="mainContainer" alignment="TOP_CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="45.0"/>
        </padding>
        <Label fx:id="loginLabel" text="PAGINA PER IL LOGIN" />
        <VBox spacing="40.0">
            <StackPane alignment="CENTER_LEFT">
                <TextField fx:id="textFieldUsername" promptText="USERNAME" />
            </StackPane>
            <StackPane alignment="CENTER_LEFT">
                <PasswordField fx:id="textFieldPassword" promptText="PASSWORD" />
            </StackPane>
            <StackPane alignment="CENTER">
                <Button fx:id="buttonEntra" text="ENTRA" onAction="#onLoginButtonClick"/>
            </StackPane>
        </VBox>
    </VBox>

    <!-- HBox per il bottone della registrazione -->
    <HBox fx:id="registerContainer" alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Button text="CAMBIA GRAFICA" onAction="#cambiaGrafica"/>
        <Button text="REGISTRATI" />
    </HBox>

</AnchorPane>
